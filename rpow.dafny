function pow(x: nat, n: nat): nat {
  if (n == 0) then
    1
   else
    x * pow(x, n - 1)
}

lemma powlemma(x: nat, y: nat, n: nat)
  ensures pow(x, n) * pow(y, n) == pow(x * y, n)
{
  if n > 0 {
    powlemma(x, y, n - 1) ;
  }
}

method rpow(x: nat, n: nat) returns (res:nat)
  ensures res == pow(x, n)
{
  var xx: nat := x;
  var nn: nat := n;
  var rr: nat := 1;
  while nn > 0
    decreases nn
    invariant pow(x,n) == rr * pow(xx, nn)
  {
    if (nn % 2 == 1) {
      rr := xx * rr;
      nn := nn - 1;
    }
    nn := nn / 2;
    if (n > 0) {
      xx := xx * xx;
    }
  }
  return rr;
}
